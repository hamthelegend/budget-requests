@page
@using BudgetRequests.Models
@model BudgetRequests.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="homepage-container">
    <div class="navigation">
        <ul>
            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="cash-outline"></ion-icon>
                    </span>
                    <span class="title">Budget Requests</span>
                </a>
            </li>
            <li>
                <a asp-page="../Requests/Index">
                    <span class="icon">
                        <ion-icon name="wallet-outline"></ion-icon>
                    </span>
                    <span class="title">My Requests</span>
                </a>
            </li>
            <li>
                <a asp-page="../Notifications/Index">
                    <span class="icon">
                        <ion-icon name="notifications-outline"></ion-icon>
                    </span>
                    <span class="title">Notifications</span>
                </a>
            </li>
            <li class="hovered">
                <a asp-page="../Users/Index">
                    <span class="icon">
                        <ion-icon name="people-outline"></ion-icon>
                    </span>
                    <span class="title">Users</span>
                </a>
            </li>
            <li>
                <a asp-page="../Organizations/Index">
                    <span class="icon">
                        <ion-icon name="briefcase-outline"></ion-icon>
                    </span>
                    <span class="title">Organizations</span>
                </a>
            </li>
            <li>
                <a asp-page="../Profile/Index">
                    <span class="icon">
                        <ion-icon name="person-outline"></ion-icon>
                    </span>
                    <span class="title">@Model.User.FullName</span>
                </a>
            </li>
            <li>
                <a asp-page="../Login/Index">
                    <span class="icon">
                        <ion-icon name="log-out-outline"></ion-icon>
                    </span>
                    <span class="title">Logout</span>
                </a>
            </li>
        </ul>
    </div>


    <!--menu-->
    <div class="main">
        <div class="topbar">
            <div class="toggle">
                <ion-icon name="menu-outline"></ion-icon>
            </div>
            <!--search-->
            <div class="search">
                <label>
                    <input type="text" placeholder="Search here">
                    <ion-icon name="search-outline"></ion-icon>
                </label>
            </div>
        </div>

        <div class="two-buttons">

            <a asp-page="Create" class="unstyled-a">
                <button class="half-create-btn">
                    <ion-icon name="person-add"></ion-icon>
                    &nbsp; &nbsp; &nbsp; Create User
                </button>

            </a>
            
            <a asp-page="CollegeAdmins" class="unstyled-a">
                <button class="half-create-btn">
                    <ion-icon name="accessibility"></ion-icon>
                    &nbsp; &nbsp; &nbsp; Manage Admins
                </button>
            </a>
        </div>

        <!--data-->
        <div class="cardBox">
            @foreach (var user in Model.Users)
            {
                <a asp-page="Details" asp-route-id="@user.Id">
                    <div class="card">
                        <div>
                            <div class="cardTitle">@user.FullName</div>
                            <div class="cardBody">@(user.Type == UserType.Admin ? "Admin" : "Officer")</div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>