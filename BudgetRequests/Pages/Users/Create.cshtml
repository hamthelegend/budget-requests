@page
@model CreateModel

@{
    ViewData["Title"] = "Create Super Admin";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="./css/site.css">
</head>
<body style="background: #eeeeee">

<div>
    <div class="row d-flex justify-content-md-center align-items-center vh-100">
        <div class="col-md-4 rounded-rectangle">
            <h2 class="mb-4">@Model.PageTitle</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.HasSuperAdmin)
                {
                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group" style="width: 100%;">
                        <input type="radio" class="btn-check" asp-for="UserType" value="admin" id="btn-radio-1" autocomplete="off" checked>
                        <label class="btn btn-outline-secondary" for="btn-radio-1">Admin</label>

                        <input type="radio" class="btn-check" asp-for="UserType" value="officer" id="btn-radio-2" autocomplete="off">
                        <label class="btn btn-outline-secondary" for="btn-radio-2">Officer</label>
                    </div>
                }
                <div class="form-group mt-4">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control mt-1"/>
                    <span asp-validation-for="FirstName" class="text-danger mt-1"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="MiddleName" class="control-label"></label>
                    <input asp-for="MiddleName" class="form-control mt-1"/>
                    <span asp-validation-for="MiddleName" class="text-danger mt-1"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control mt-1"/>
                    <span asp-validation-for="LastName" class="text-danger mt-1"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control mt-1"/>
                    <span asp-validation-for="Username" class="text-danger mt-1"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control mt-1" type="password"/>
                    <span asp-validation-for="Password" class="text-danger mt-1"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="RepeatPassword" class="control-label"></label>
                    <input asp-for="RepeatPassword" class="form-control mt-1" type="password"/>
                    <span asp-validation-for="RepeatPassword" class="text-danger mt-1"></span>
                </div>
                <div class="form-group mt-4 mb-2">
                    <input type="submit" value="Create" class="btn btn-primary" style="width: 100%;"/>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>

<script>
</script>