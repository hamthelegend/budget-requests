<div class="create-container">
    <div class="box form-box">
        <header>Comments</header>
        <form action="" method="post">
            @foreach (var comment in Model.Comments)
            {
                <div class="field input">
                    <label class="control-label">@comment.Commenter.FullName</label>
                    <input value="@comment.Body" class="form-control mt-2" readonly/>
                </div>
            }
            <div class="field input">
                <label class="control-label">New Comment</label>
                <input asp-for="Comment" class="form-control mt-2"/>
            </div>
            
            <div class="field">
                <input type="submit" class="btn btn-primary" name="submit" asp-page-handler="Add" asp-route-id="@Model.BudgetRequest.Id" value="Add Comment" required>
            </div>
            
            <div class="field">
                <input style="margin-top: 0" type="submit" class="btn btn-secondary" name="submit" asp-page-handler="Cancel" asp-route-id="@Model.BudgetRequest.Id" value="Cancel" required>
            </div>
        </form>
    </div>
</div>