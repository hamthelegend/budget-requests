@page
@using Microsoft.IdentityModel.Tokens
@model BudgetRequests.Pages.Profile.ChangePassword

@{
    ViewData["Title"] = "Change Password";
}

<div class="create-container">
    <div class="box form-box">
        <header>Change Your Password</header>
        <form action="" method="post">
            <div class="field input">
                <label class="control-label">New Password</label>
                <input asp-for="Password" class="form-control mt-2" type="password"/>
                <span class="error-text">@Model.PasswordError</span>
            </div>
            <div class="field input">
                <label class="control-label">Repeat Password</label>
                <input asp-for="RepeatPassword" class="form-control mt-2" type="password"/>
                <span class="error-text">@Model.RepeatPasswordError</span>
            </div>
            <div class="field">
                <input type="submit" class="btn btn-primary" name="submit" value="Save" required>
            </div>
            <div class="field">
                <input style="margin-top: 0" type="submit" class="btn btn-secondary" name="submit" asp-page-handler="Cancel" value="Cancel" required>
            </div>
        </form>
    </div>
</div>


<script>
    function show(a){
      document.querySelector('.text02').value = a;
    }

    let dropdown = document.querySelector('.dropdown');
    dropdown.onclick = function(){
      dropdown.classList.toggle('active');
    }
</script>