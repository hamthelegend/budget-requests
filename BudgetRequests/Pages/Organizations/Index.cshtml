@page
@model BudgetRequests.Pages.Organizations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="homepage-container">
    <div class="navigation">
        <ul>
            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="cash-outline"></ion-icon>
                    </span>
                    <span class="title">Budget Requests</span>
                </a>
            </li>
            <li>
                <a asp-page="../Requests/Index">
                    <span class="icon">
                        <ion-icon name="wallet-outline"></ion-icon>
                    </span>
                    <span class="title">My Requests</span>
                </a>
            </li>
            <li>
                <a asp-page="../Users/Index">
                    <span class="icon">
                        <ion-icon name="people-outline"></ion-icon>
                    </span>
                    <span class="title">Users</span>
                </a>
            </li>
            <li class="hovered">
                <a asp-page="../Organizations/Index">
                    <span class="icon">
                        <ion-icon name="briefcase-outline"></ion-icon>
                    </span>
                    <span class="title">Organizations</span>
                </a>
            </li>
            <li>
                <a asp-page="../Profile/Index">
                    <span class="icon">
                        <ion-icon name="person-outline"></ion-icon>
                    </span>
                    <span class="title">@Model.User.FullName</span>
                </a>
            </li>
            <li>
                <a asp-page="../Login/Index">
                    <span class="icon">
                        <ion-icon name="log-out-outline"></ion-icon>
                    </span>
                    <span class="title">Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <!--menu-->
    <div class="main">

        <div class="cardBox" style="padding-bottom: 0">
            <div class="search" style="margin-bottom: 20px">
                <label>
                    <input type="text" placeholder="Search here">
                </label>
            </div>

            @if (Model.IsSuperAdmin)
            {
                <a asp-page="Create" type="button" class="unstyled-a create-btn">
                    Add Organization
                </a>
            }
            
        </div>

        <!--data-->
        <div class="cardBox">
            @foreach (var organization in Model.Organizations)
            {
                <a asp-page="Details" asp-route-id="@organization.Id">
                    <div class="card">
                        <div>
                            <div class="cardTitle">@organization.Name</div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>