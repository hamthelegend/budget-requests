@page
@model BudgetRequests.Pages.Login.IndexModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
</head>
<body style="background: #eeeeee">
<div>
    <div class="row d-flex justify-content-md-center align-items-center vh-100">
        <div class="col-md-4 rounded-rectangle">
            <h2 class="mb-4">Login</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-2">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control mt-1"/>
                    <span asp-validation-for="Username" class="text-danger mt-1"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control mt-1" type="password"/>
                    <span asp-validation-for="Password" class="text-danger mt-1"></span>
                </div>
                <div class="form-group mt-4 mb-2">
                    <input type="submit" value="Login" class="btn btn-primary" style="width: 100%;"/>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>